{
	"name": "semantic-release-expo",
	"version": "2.1.6",
	"description": "An Expo implementation for semantic release, so you don't have to bother",
	"keywords": [
		"expo",
		"exponential",
		"react",
		"native",
		"semantic",
		"release",
		"bycedric"
	],
	"author": "Cedric van Putten <me@bycedric.com>",
	"license": "MIT",
	"homepage": "https://github.com/bycedric/semantic-release-expo#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/bycedric/semantic-release-expo.git"
	},
	"bugs": {
		"url": "https://github.com/bycedric/semantic-release-expo/issues"
	},
	"main": "./build/src/index.js",
	"types": "./build/src/index.d.ts",
	"scripts": {
		"lint": "tslint '{src,test}/**/*.ts'",
		"test": "jest",
		"build": "tsc",
		"commit": "git-cz"
	},
	"dependencies": {
		"detect-indent": "^6.0.0",
		"detect-newline": "^3.0.0",
		"fs-extra": "^8.1.0",
		"lodash": "^4.17.14",
		"semver": "^6.2.0"
	},
	"devDependencies": {
		"@commitlint/travis-cli": "^8.0.0",
		"@peakfijn/config-commitizen": "^1.0.1",
		"@peakfijn/config-commitlint": "^1.0.1",
		"@peakfijn/config-release": "^1.0.1",
		"@types/detect-indent": "^5.0.0",
		"@types/fs-extra": "^8.0.0",
		"@types/jest": "^24.0.11",
		"@types/lodash": "^4.14.136",
		"@types/node": "^12.6.2",
		"@types/semver": "^6.0.1",
		"codecov": "^3.3.0",
		"jest": "^24.8.0",
		"ts-jest": "^24.0.2",
		"tslint": "^5.18.0",
		"typescript": "^3.5.3"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"testURL": "http://localhost/",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		}
	},
	"config": {
		"commitizen": {
			"path": "@peakfijn/config-commitizen"
		}
	},
	"commitlint": {
		"extends": [
			"@peakfijn/config-commitlint"
		],
		"rules": {
			"scope-empty": [
				0
			],
			"scope-enum": [
				2,
				"always",
				[
					"deps",
					"deps-dev"
				]
			]
		}
	},
	"release": {
		"extends": "@peakfijn/config-release"
	}
}
